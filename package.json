{
  "name": "radiocalendar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "pod:start": "./start-containers.sh",
    "drizzle:push": "deno run -A --env-file npm:drizzle-kit push",
    "drizzle:generate": "deno run -A --env-file npm:drizzle-kit push",
    "dev": "deno task dev:api & deno task dev:vite",
    "dev:api": "deno run --allow-env --allow-net --allow-read --watch api/main.ts",
    "dev:vite": "deno run -A npm:vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@mantine/carousel": "^7.17.1",
    "@mantine/core": "^7.17.1",
    "@mantine/dates": "^7.17.1",
    "@mantine/dropzone": "^7.17.1",
    "@mantine/hooks": "^7.17.1",
    "@mantine/modals": "^7.17.1",
    "@mantine/notifications": "^7.17.1",
    "@mantine/nprogress": "^7.17.1",
    "@reduxjs/toolkit": "^2.6.0",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.10",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "embla-carousel-react": "^8.5.2",
    "libsql": "^0.5.0-pre.6",
    "node-html-parser": "^7.0.1",
    "pg": "^8.13.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.2.0",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.2.0"
  }
